#include "fillit.h"

int	ft_x_right(t_pos **pos)
{
	int i;

	i = 0;
	while (i < 4)
	{
		if (((*pos)->x[i] + 1) > 3)
			return (0);
		i++;
	}
	i = 0;
	while (i < 4)
	{
		(*pos)->x[i]++;
		i++;
	}
	return (1);
}
